<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fish2"
    tools:context="com.example.jaydeep.finalc2kapp.CameraActivity"
    android:onClick="layoutClicked">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:id="@+id/camera_imageView"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera_imageView"
        android:id="@+id/camera_textView"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:textColor="#ff0000"/>

</RelativeLayout>
